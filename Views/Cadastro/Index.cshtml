@model harakiri_rpg.Models.Pages.Cadastro.CadastroViewModel;

<h2>Cadastro</h2>

<form asp-action="Index" method="post">
    <div class="form-group col-3">
        <label asp-for="nm_usuario"></label>
        <input asp-for="nm_usuario" class="form-control" />
    </div>
    <div class="form-group col-3">
        <label asp-for="nm_email"></label>
        <input asp-for="nm_email" class="form-control" />
    </div>
    <div class="form-group col-3">
        <label asp-for="nr_celular"></label>
        <input asp-for="nr_celular" type="number" class="form-control" />
    </div>
    <div class="form-group col-3">
        <label asp-for="nm_senha"></label>
        <input asp-for="nm_senha" type="password" class="form-control" />
    </div>
    <div class="form-group col-3">
        <label asp-for="nm_senha_confirma"></label>
        <input asp-for="nm_senha_confirma" type="password" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Registrar-se</button>
</form>
