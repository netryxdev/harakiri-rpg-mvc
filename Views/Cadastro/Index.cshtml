@model harakiri_rpg.Models.Pages.Cadastro.CadastroViewModel

<div class="d-flex justify-content-center align-items-center bg-main-ct">
    <div class="card card-ct p-4" style="width: 22rem; height:100%">
        <h2 class="text-center mb-4 ">Cadastro</h2>

        <form asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="nm_usuario"></label>
                <input asp-for="nm_usuario" class="form-control bg-input-ct text-white" />
            </div>
            <div class="form-group mt-3">
                <label asp-for="nm_email"></label>
                <input asp-for="nm_email" class="form-control bg-input-ct text-white" />
            </div>
            <div class="form-group mt-3">
                <label asp-for="nr_celular"></label>
                <input asp-for="nr_celular" type="number" class="form-control bg-input-ct text-white" />
            </div>
            <div class="form-group mt-3">
                <label asp-for="nm_senha"></label>
                <input asp-for="nm_senha" type="password" class="form-control bg-input-ct text-white" />
            </div>
            <div class="form-group mt-3">
                <label asp-for="nm_senha_confirma"></label>
                <input asp-for="nm_senha_confirma" type="password" class="form-control bg-input-ct text-white" />
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-4">Cadastrar-se</button>
        </form>
    </div>
</div>
